<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/img_song"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/regular_margin"
        android:scaleType="centerCrop"
        tools:src="@drawable/ncs" />

    <LinearLayout
        android:layout_marginEnd="@dimen/margin_between_elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_between_elements"
        android:layout_toStartOf="@id/img_play_or_pause"
        android:layout_toEndOf="@id/img_song"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_song_name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Happy new year" />

        <TextView
            android:id="@+id/txt_single_name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            tools:text="ABBA" />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/regular_margin"
        android:src="@drawable/ic_clear" />

    <ImageView
        android:id="@+id/img_play_or_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/regular_margin"
        android:layout_toStartOf="@id/img_clear"
        android:src="@drawable/ic_pause" />


</RelativeLayout>